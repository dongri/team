{{#*inline "title"}}
  Posts - Team
{{/inline}}
{{#*inline "page"}}
  <div class="user-profile">
    {{#if user.icon_url}}
      <img src="{{user.icon_url}}" class="user-large-icon">
    {{else}}
      <canvas width="50" height="50" data-jdenticon-hash="{{user.username_hash}}" class="user-large-icon"></canvas>
    {{/if}}
    <h3 class="usr-profile-username">@{{user.username}}</h3>
    <h4><a href="/{{user.username}}/post">Post</a> | <a href="/{{user.username}}/nippo">Nippo</a></h4>
  </div>
  <ul class="post-items">
  {{#each posts}}
    <li>
      <div class="post-item-left">
      <a href="/{{user.username}}">
        {{#if user.icon_url}}
          <img src="{{user.icon_url}}" class="user-icon">
        {{else}}
          <canvas width="50" height="50" data-jdenticon-hash="{{user.username_hash}}" class="user-icon"></canvas>
        {{/if}}
      </a>
      </div>
      <div class="post-item-right">
        <div class="post-item">
          <div class="post-username">
            @{{user.username}}
          </div>
          <div class="post-title">
            <a href="/post/show/{{id}}">{{title}}</a>
          </div>
          {{#if tags}}
          <div class="post-tags">
            {{#each tags}}
              <span class="tag-label"><a href="/tag?name={{name}}">{{name}}</a></span>
            {{/each}}
          </div>
          {{/if}}
          <div class="item-created">{{created}}</div>
        </div>
      </div>
    </li>
  {{/each}}
  </ul>
  <div class="paginates">
    <a href="/{{user.username}}?page={{prev_page}}">Previous</a>
    {{current_page}} of {{total_page}}
    <a href="/{{user.username}}?page={{next_page}}">Next</a>
  </div>
{{/inline}}
{{~> layout ~}}
