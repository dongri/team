{{#*inline "title"}}
  Update {{kind}} - Team
{{/inline}}
{{#*inline "page_head"}}
{{> post/head}}
{{/inline}}
{{#*inline "page"}}
  <form class="mui-form" action="/{{kind}}/update" method="post">
    <input type="hidden" name="id" value="{{post.id}}">
    <div class="mui-textfield">
      <input type="text" placeholder="Title" name="title" value="{{post.title}}" class="input-title">
    </div>
    <div class="mui-textfield">
      <textarea name="body" placeholder="body" id="mdeditor" cols="30" rows="10" class="form-control">{{post.body}}</textarea>
    </div>
    <div class="mui-textfield">
      <input type="text" placeholder="Tags (e.g. rust,tips,postgres)" name="tags" value="{{tags}}" class="input-tags">
    </div>
    <button type="submit" class="mui-btn mui-btn--raised mui-btn--primary" name='action' value="publish">Update & Publish</button>
    <button type="submit" class="mui-btn mui-btn--raised mui-btn--primary" name='action' value="draft">Draft</button>
  </form>
  <script>
    var simplemde = new SimpleMDE({
      element: document.getElementById("mdeditor"),
      spellChecker: false
    });
  </script>
{{/inline}}
{{~> layout ~}}
