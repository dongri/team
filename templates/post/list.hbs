{{#*inline "title"}}
  {{kind}} - Team
{{/inline}}
{{#*inline "page"}}
  <h2 class="page-title">{{kind}}</h2>
  <button class="mui-btn mui-btn--small mui-btn--primary post-button" onClick="location.href='/{{kind}}/new'">{{new_title}}</button>
  <ul class="post-items">
  {{#each posts}}
    <li>
      <div class="post-item-left">
      <a href="/{{user.username}}">
        {{#if user.icon_url}}
          <img src="{{user.icon_url}}" class="user-icon">
        {{else}}
          <canvas width="50" height="50" data-jdenticon-hash="{{user.username_hash}}" class="user-icon"></canvas>
        {{/if}}
      </a>
      </div>
      <div class="post-item-right">
        <div class="post-item">
          <div class="post-username">
            @{{user.username}}
          </div>
          <div class="post-title">
            <a href="/{{kind}}/show/{{id}}">{{title}}</a>
          </div>
          {{#if tags}}
          <div class="post-tags">
            {{#each tags}}
              <span class="tag-label"><a href="/tag?name={{name}}">{{name}}</a></span>
            {{/each}}
          </div>
          {{/if}}
          <div class="item-created">{{created}}</div>
        </div>
      </div>
    </li>
  {{/each}}
  </ul>
  <div class="paginates">
    <a href="/{{kind}}/list?page={{prev_page}}">Previous</a>
    {{current_page}} of {{total_page}}
    <a href="/{{kind}}/list?page={{next_page}}">Next</a>
  </div>
{{/inline}}
{{~> layout ~}}
