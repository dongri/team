{{#*inline "title"}}
  Gist - Team
{{/inline}}
{{#*inline "page"}}
  <h2 class="page-title">Gist</h2>
  <button class="mui-btn mui-btn--small mui-btn--primary post-button" onClick="location.href='/gist/new'">New Gist</button>
  <ul class="post-items">
  {{#each gists}}
    <li>
      <div class="post-item-left">
      <a href="/{{user.username}}">
        {{#if user.icon_url}}
          <img src="{{user.icon_url}}" class="user-icon">
        {{else}}
          <canvas width="50" height="50" data-jdenticon-hash="{{user.username_hash}}" class="user-icon"></canvas>
        {{/if}}
      </a>
      </div>
      <div class="post-item-right">
        <div class="post-item">
          <div class="post-username">
            @{{user.username}}
          </div>
          <div class="post-title">
            <a href="/gist/show/{{id}}">{{description}}</a>
          </div>
          {{#if tags}}
          {{/if}}
          <div class="item-created">{{created}}</div>
        </div>
      </div>
    </li>
  {{/each}}
  </ul>
  <div class="paginates">
    <a href="/gist/list?page={{prev_page}}">Previous</a>
    {{current_page}} of {{total_page}}
    <a href="/gist/list?page={{next_page}}">Next</a>
  </div>
{{/inline}}
{{~> layout ~}}
